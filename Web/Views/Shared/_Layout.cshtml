<script>
  function updateRigaTime() {
    // UTC+3 летом, UTC+2 зимой (EET/EEST). Для точности используем Europe/Riga.
    const now = new Date();
    const options = { hour: '2-digit', minute: '2-digit', hour12: false, timeZone: 'Europe/Riga' };
    const parts = new Intl.DateTimeFormat('en-GB', options).formatToParts(now);
    let hour = parts.find(p => p.type === 'hour').value;
    let minute = parts.find(p => p.type === 'minute').value;
    let colon = now.getSeconds() % 2 === 0 ? '<span class="blink">:</span>' : ':';
    document.getElementById('riga-time').innerHTML = `${hour}${colon}${minute}`;
  }
  updateRigaTime();
  setInterval(updateRigaTime, 1000);
</script>

