@using Microsoft.AspNetCore.Mvc.Controllers
@{
  var actionDescriptor = Context.GetEndpoint()?.Metadata.GetMetadata<ControllerActionDescriptor>();
  var currentController = actionDescriptor?.ControllerName;
  var currentAction = actionDescriptor?.ActionName;
  var showAdminBar = User.Identity.IsAuthenticated 
                     && User.IsInRole("Admin")
                     && !(currentController == "Admin" && currentAction == "Index");
}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width"/>
  <title>@ViewBag.Title | RigaMetro</title>
  <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.ico">
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet"/>
  <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="@(showAdminBar ? "admin-bar-active" : "")">
@if (showAdminBar) {
  <div class="admin-top-bar d-flex justify-content-between align-items-center">
    <div class="container-fluid d-flex justify-content-between align-items-center px-3">
      <div class="admin-bar-title d-flex align-items-center gap-2 py-1">
        <span>Riga Metro | Admin Panel</span>
      </div>
      <div class="admin-bar-actions d-flex align-items-center gap-2">
        <a class="btn btn-animated btn-light-animated admin-bar-btn"
           asp-controller="Admin" asp-action="Index">
          Open Admin
        </a>
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline m-0">
          <button type="submit" style="padding: 4px; border-width: 2px;" class="btn btn-outline-light d-flex align-items-center" title="Logout">
            <img src="~/images/logout.svg" alt="Logout" style="width:20px;height:20px;display:block;" />
          </button>
        </form>
      </div>
    </div>
  </div>
}

<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid px-4 g-2 d-flex justify-content-between align-items-center">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">
        <img src="~/images/RigaMetroLogo.svg" alt="Logo"/>
      </a>
      <ul class="navbar-nav d-flex gap-4 align-items-center">
        <li class="nav-item">
          <a class="nav-link text-white hover-underline-animation" asp-action="History">History</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white hover-underline-animation" asp-action="DebugData">Debug</a>
        </li>
        <li class="nav-item">
          <span class="navbar-text text-white">@DateTime.Now.ToString("HH:mm")</span>
        </li>
      </ul>
    </div>
  </nav>
</header>
<main class="container-fluid px-3" role="main">
  @RenderBody()
</main>
<footer class="container-fluid px-3 py-2 mt-1">
  <p class="text-center">CopyrightÂ© Rostislavs Belovs(Knyaz), @DateTime.Now.Year. All rights reserved</p>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>